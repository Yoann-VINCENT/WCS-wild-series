{% extends '/base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    <section class="program">
            <div class="programContainer">
                <h2>{{ program.title }}</h2>
                <img src="{{ program.poster }}" alt="{{ program.title }} poster">
                <p>{{ program.summary }}</p>
                <p>Catégorie : {{ program.category.name }}</p>
                <ul>
                {% for season in seasons %}
                    <li><a href="{{ path('program_season_show', {programId: program.id, seasonId:season.id}) }}">Season : {{ season.number }}</a></li>
                {% endfor %}
                </ul>
            </div>
    </section>
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}